extends ../layouts/main-layout.pug
block content 
    if errorMessage
        div.alert.alert-danger.col-sm-10.offset-sm-2 !{errorMessage}
    form(action="/admin/add-category" method="POST")
        input(type="hidden" name="_csrf" value=`${csrfToken}`)
        .form-group.row
            label(for="name").col-sm-2.col-form-label Kategori Adı:
            .col-sm-10
                input.form-control#name(type="text" name="name")                        
        .form-group.row
            label(for="description").col-sm-2.col-form-label Kategori Açıklama
            .col-sm-10
                textarea.form-control#description(cols="30" rows="10" name="description")
        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit" value="Kaydet").btn.btn-primary
