extends ../layouts/main-layout.pug
block content 
    form(action="/admin/categories" method="POST")
        input(type="hidden" name="_csrf" value=`${csrfToken}`)
        input(type="hidden" name="id" value=`${category._id}`)

        .form-group.row
            label(for="name").col-sm-2.col-form-label Ürün Adı:
            .col-sm-10
                input.form-control#name(type="text" name="name" value=`${category.name}`)                        
        .form-group.row
            label(for="description").col-sm-2.col-form-label Açıklama
            .col-sm-10
                textarea.form-control#description(cols="30" rows="10" name="description") #{category.description}
        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit" value="Kaydet").btn.btn-primary
