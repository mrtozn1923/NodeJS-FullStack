extends ../layouts/main-layout.pug
block content 
    form(action="/register" method="POST")
        .form-group.row.justify-content-center
            label(for="name").col-sm-2.col-form-label Ad:
            .col-sm-4
                input.form-control#name(type="text" name="name")
        .form-group.row.justify-content-center
            label(for="email").col-sm-2.col-form-label E-Posta:
            .col-sm-4
                input.form-control#email(type="text" name="email")                        
        .form-group.row.justify-content-center
            label(for="password").col-sm-2.col-form-label Åžifre:
            .col-sm-4
                input.form-control#password(type="password" name="password")  
        .form-group.row.justify-content-center
            .col-sm-4.offset-sm-2
                input(type="submit" value="Kaydet").btn.btn-primary
