mixin createProduct(product)
    .col-md-4
            .card
                img(src=`/img/${product.imageUrl}` alt="").card-img-top
                .card-body
                    h4.card-title
                        a(href=`/products/${product._id}`) #{product.name}
                    small.text-muted
                        i.fas.fa-lira-sign #{product.price}

                .card-footer.text-center
                    a(href=`/products/${product._id}`).btn.btn-outline-primary.btn-sm Detay
                    form(action='/cart' method="POST")
                        input(type="hidden" name="productId" value=`${product._id}`)
                        button(type="submit").btn.btn-outline-primary.btn-sm.ml-3 Sepete Ekle