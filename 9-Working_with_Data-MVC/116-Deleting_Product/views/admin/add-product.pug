extends ../layouts/main-layout.pug
block content 
    form(action="/admin/add-product" method="POST")
        .form-group.row
            label(for="name").col-sm-2.col-form-label Ürün Adı:
            .col-sm-10
                input.form-control#name(type="text" name="name")                        
        .form-group.row
            label(for="price").col-sm-2.col-form-label Fiyat
            .col-sm-10
                input.form-control#price(type="text" name="price")  
        .form-group.row
            label(for="imageUrl").col-sm-2.col-form-label Resim
            .col-sm-10
                input.form-control#image(type="text" name="imageUrl")  
        .form-group.row
            label(for="description").col-sm-2.col-form-label Açıklama
            .col-sm-10
                input.form-control#description(type="text" name="description")  
        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit" value="Kaydet").btn.btn-primary
